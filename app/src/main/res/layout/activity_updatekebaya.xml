<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".updatekebaya"
    android:background="@drawable/kebayasunda">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            app:srcCompat="@drawable/mahkota2" />

        <!-- Username Label -->
        <EditText android:id="@+id/text_jeniskebayaupdate"
            android:layout_marginTop="10dp"
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:hint="JENIS KEBAYA"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/edittext"
            />

        <!--  Label -->
        <EditText android:id="@+id/text_modelkebayaupdate"
            android:layout_marginTop="10dp"
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:hint="MODEL KEBAYA"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/edittext"/>

        <EditText android:id="@+id/text_deskripsiupdate"
            android:layout_marginTop="10dp"
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:hint="DESKRIPSI"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/edittext"/>

        <ImageButton
            android:id="@+id/button_saveupdate"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="120dp"
            app:srcCompat="@drawable/save2" />

    </LinearLayout>
</FrameLayout>
